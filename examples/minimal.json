{
  "name": "minimal-package-manager",
  "components": [
    "mise.setup",
    {
      "name": "mise.install",
      "params": {
        "packages": [
          "node@lts"
        ]
      }
    },
    "nix.setup",
    {
      "name": "nix.install",
      "params": {
        "packages": [
          "ripgrep",
          "fd"
        ]
      }
    },
    {
      "name": "shell.post-create",
      "params": {
        "user": "vscode",
        "commands": [
          "npm install -g @anthropic-ai/claude-code"
        ]
      }
    }
  ]
}
