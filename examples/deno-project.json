{
  "name": "deno-development",
  "components": [
    {
      "name": "apt.install",
      "params": {
        "packages": [
          "git",
          "curl",
          "iptables",
          "ipset",
          "iproute2",
          "dnsutils",
          "sudo",
          "fish",
          "coreutils"
        ]
      }
    },
    "firewall.setup",
    "mise.setup",
    "nix.setup",
    {
      "name": "mise.install",
      "params": {
        "packages": [
          "deno@2",
          "node@lts"
        ]
      }
    },
    {
      "name": "nix.install",
      "params": {
        "packages": [
          "ripgrep",
          "fd",
          "starship"
        ]
      }
    },
    {
      "name": "vscode.install",
      "params": {
        "extensions": [
          "denoland.vscode-deno",
          "eamodio.gitlens",
          "Anthropic.claude-code"
        ]
      }
    },
    {
      "name": "firewall.domain",
      "params": {
        "presets": [
          "github",
          "deno",
          "npm",
          "nix",
          "claude-code"
        ],
        "allows": [
          "mcp.context7.com",
          "context7.com",
          "mcp.deepwiki.com",
          "deepwiki.com"
        ]
      }
    },
    "firewall.github-api",
    {
      "name": "shell.setup",
      "params": {
        "shell": "fish"
      }
    },
    {
      "name": "shell.post-create",
      "params": {
        "user": "vscode",
        "commands": [
          "npm install -g @anthropic-ai/claude-code",
          "claude mcp add --transport http context7 https://mcp.context7.com/mcp",
          "claude mcp add --transport http deepwiki https://mcp.deepwiki.com/mcp"
        ]
      }
    },
    "sudo.disable"
  ]
}
