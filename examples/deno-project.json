{
  "name": "deno-development",
  "components": [
    {
      "name": "apt.install",
      "params": {
        "packages": [
          "git",
          "curl",
          "iptables",
          "ipset",
          "iproute2",
          "dnsutils",
          "sudo",
          "fish",
          "coreutils"
        ]
      }
    },
    "firewall.setup",
    "mise.setup",
    "nix.setup",
    {
      "name": "mise.install",
      "params": {
        "packages": [
          "deno@2",
          "node@lts"
        ]
      }
    },
    {
      "name": "nix.install",
      "params": {
        "packages": [
          "ripgrep",
          "fd",
          "starship"
        ]
      }
    },
    {
      "name": "vscode.install",
      "params": {
        "extensions": [
          "denoland.vscode-deno",
          "eamodio.gitlens"
        ]
      }
    },
    "firewall.github-api",
    {
      "name": "firewall.domain",
      "params": {
        "presets": [
          "github",
          "deno",
          "npm"
        ]
      }
    },
    {
      "name": "shell.setup",
      "params": {
        "shell": "fish"
      }
    },
    {
      "name": "sudo.disable"
    }
  ]
}
